<h1 class="text-center">Login</h1>

<%= form_tag '/login', class: 'form-horizontal col-sm-4 col-sm-offset-4' do %>
  <div class="form-group">
    <%= label_tag :username, 'Username', class: 'col-sm-4' %>
    <div class="col-sm-8">
      <%= text_field_tag :username, params[:username], class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, 'Password', class: 'col-sm-4' %>
    <div class="col-sm-8">
      <%= text_field_tag :password, nil, class: 'form-control' %>
    </div>
  </div>
  <%= submit_tag 'Log in', class: 'btn btn-primary pull-right' %>
<% end %>
