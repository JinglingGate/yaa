<div class="container">
  <h1>Add Pin</h1>

  <%= form_for @pin, html: {class: 'form-horizontal col-sm-4'} do |f| %>
    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-4">
        <%= f.collection_select :user_id, @users, :id, :username, {}, {class:'form-control'} %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-4">
        <%= f.collection_select :category_id, @categories, :id, :name, {}, {class:'form-control'}%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :lat, 'Latitude', class:'col-sm-4'%>
      <div class="col-sm-8">
        <%= f.text_field :lat, class:'form-control'%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :long, 'Longitude', class:'col-sm-4'%>
      <div class="col-sm-8">
        <%= f.text_field :long, class:'form-control'%>
      </div>
    </div>
    <%= f.submit "Submit", class:'btn btn-primary pull-right'%>
  <% end %>
</div>
